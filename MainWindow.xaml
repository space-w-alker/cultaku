<Window x:Class="culTAKU.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:culTAKU"
        xmlns:views="clr-namespace:culTAKU.ViewsAndControllers"
        xmlns:extras="clr-namespace:culTAKU.ViewsAndControllers.Extras"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowState="Maximized" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" WindowStyle="None" Background="{x:Null}" Closing="Window_Closing">
    
    <Grid Name="mainGrid" Margin="0,2,0,0" Style="{StaticResource Background}">
        
        <extras:StatusDisplay x:Name="status_display"/>
    </Grid>
</Window>
